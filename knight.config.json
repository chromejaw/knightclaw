{
  "version": 1,
  "guard": {
    "enabled": true,
    "sensitivity": "high",
    "blockPatterns": true,
    "blockEval": true,
    "blockUnsafeContent": true,
    "maxInputLength": 100000
  },
  "logs": {
    "enabled": true,
    "hashChain": true,
    "signed": true,
    "logPermissions": true,
    "logNetwork": true,
    "logCredentials": true,
    "logConfigChanges": true,
    "logErrors": true,
    "redactSecrets": true,
    "maxFileSizeMb": 50
  },
  "vault": {
    "enabled": true,
    "algorithm": "aes-256-gcm",
    "keyDerivation": "pbkdf2",
    "iterations": 600000
  },
  "lockdown": {
    "active": false,
    "autoTrigger": true,
    "autoTriggerThreshold": 5
  }
}